{
  "name": "@ff2005/react-translations",
  "author": "FF2005",
  "version": "0.0.2",
  "description": "Simple translations lib for react using hooks",
  "license": "MIT",
  "main": "lib/index.js",
  "main:min": "lib/index.min.js",
  "main:esm": "lib/index.esm.js",
  "module": "lib/index.es.js",
  "jsnext:main": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
